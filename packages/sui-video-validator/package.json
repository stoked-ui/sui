{
  "name": "@stoked-ui/video-validator",
  "version": "0.1.0",
  "description": "Video rendering validation test harness with frame comparison",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "video-validator": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "node --loader ts-node/esm tests/validator.test.ts",
    "validate": "node bin/cli.js"
  },
  "keywords": [
    "video",
    "validation",
    "testing",
    "rendering",
    "quality-assurance"
  ],
  "author": "Stoked UI",
  "license": "MIT",
  "dependencies": {
    "fluent-ffmpeg": "^2.1.3",
    "sharp": "^0.33.1",
    "pixelmatch": "^6.0.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/pixelmatch": "^5.2.6",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
