{
  "extends": "../../tsconfig.x.json",
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "types": [
      "chai-dom",
      "mocha",
      "node",
      "wicg-file-system-access"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.tsx"]
}
