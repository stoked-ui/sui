{
  "info": {
    "name": "Stoked UI Media API",
    "description": "REST API for Stoked UI Media Components - Upload, manage, and process media files with support for images, videos, and albums. Features include multipart uploads, metadata extraction, thumbnail generation, and comprehensive media management.",
    "version": "0.1.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001/v1",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Media",
      "item": [
        {
          "name": "Get API information",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media/api/info",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "media",
                "api",
                "info"
              ]
            },
            "description": "Get API version, statistics, and general information. Does not require authentication."
          }
        },
        {
          "name": "List media",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "media"
              ]
            },
            "description": "List media with filtering, search, sorting, and pagination. Supports both offset and cursor-based pagination.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Create media entry",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "media"
              ]
            },
            "description": "Create a new media entry in the database. Used after file upload to create the metadata record.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "null",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Get media by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media/{id}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "media",
                "{id}"
              ]
            },
            "description": "Get a single media item by ID. Increments view count on each access.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Update media",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media/{id}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "media",
                "{id}"
              ]
            },
            "description": "Update media metadata. Only the owner can update their media.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "null",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Delete media",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media/{id}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "media",
                "{id}"
              ]
            },
            "description": "Delete media (file + database). Default is soft delete. Use hardDelete=true query parameter for permanent deletion.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Restore deleted media",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media/{id}/restore",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "media",
                "{id}",
                "restore"
              ]
            },
            "description": "Restore a soft-deleted media item. Only the owner can restore their media.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Extract media metadata",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media/{id}/extract-metadata",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "media",
                "{id}",
                "extract-metadata"
              ]
            },
            "description": "Extract metadata from a media file (video/audio/image properties)."
          }
        },
        {
          "name": "Generate video thumbnail",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media/{id}/generate-thumbnail",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "media",
                "{id}",
                "generate-thumbnail"
              ]
            },
            "description": "Generate a thumbnail for a video at a specific timestamp.",
            "body": {
              "mode": "raw",
              "raw": "null",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Generate video sprite sheet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/media/{id}/generate-sprites",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "media",
                "{id}",
                "generate-sprites"
              ]
            },
            "description": "Generate a sprite sheet for video scrubbing with VTT file.",
            "body": {
              "mode": "raw",
              "raw": "null",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health check",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "health"
              ]
            },
            "description": "Check if the API is running and healthy."
          }
        }
      ]
    },
    {
      "name": "Uploads",
      "item": [
        {
          "name": "Initiate multipart upload",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/initiate",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "uploads",
                "initiate"
              ]
            },
            "description": "Start a new resumable multipart upload. Returns presigned URLs for the first batch of parts.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "null",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Get upload status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/{sessionId}/status",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "uploads",
                "{sessionId}",
                "status"
              ]
            },
            "description": "Get the current status of an upload session, including pending parts and fresh presigned URLs for resume.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Sync upload with S3",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/{sessionId}/sync",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "uploads",
                "{sessionId}",
                "sync"
              ]
            },
            "description": "Synchronize the upload session with actual S3 state. Use this when resuming an upload to ensure consistency.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Get more presigned URLs",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/{sessionId}/urls",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "uploads",
                "{sessionId}",
                "urls"
              ]
            },
            "description": "Request additional presigned URLs for specific parts (max 50 per request).",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "null",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Mark part as completed",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/{sessionId}/parts/{partNumber}/complete",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "uploads",
                "{sessionId}",
                "parts",
                "{partNumber}",
                "complete"
              ]
            },
            "description": "Confirm that a part has been successfully uploaded to S3 with its ETag.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "null",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Complete upload",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/{sessionId}/complete",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "uploads",
                "{sessionId}",
                "complete"
              ]
            },
            "description": "Finalize the multipart upload after all parts have been uploaded. Creates the media document.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "Abort upload",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/{sessionId}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "uploads",
                "{sessionId}"
              ]
            },
            "description": "Cancel an in-progress upload and clean up S3 resources.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            }
          }
        },
        {
          "name": "List active uploads",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/uploads/active",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "uploads",
                "active"
              ]
            },
            "description": "Get all active (resumable) uploads for the current user.",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}",
                  "type": "string"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}