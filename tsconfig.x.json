{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "bundler",
    // Already tested with eslint
    "noUnusedLocals": false,
    "strict": true,
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "test/*": ["./test/*"],
    }
  },
  "exclude": ["**/node_modules/!(@stoked-ui)/**", "**/build/**/*", "docs/export/**/*"]
}
